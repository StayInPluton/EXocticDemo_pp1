</head>

<body>
    <header>
        <!-- Include the header partial -->
        <%- include('../partials/header') %>
    </header>

    <!-- Cadastro -->
    <div class="contact-form spad">
        <div class="container">
          <div class="row">
            
          </div>
          <form action="/experiencias/experiencias" method="POST">
            <div class="row">
              <div class="col-lg-6 col-md-6">
                <input type="text" placeholder="Nome" name="nome">
              </div>
              <div class="col-lg-12">
                <textarea placeholder="Informações" name="informacoes"></textarea>
              </div>
              <div class="col-lg-6 col-md-6">
                <input type="number" placeholder="Preço" name="preco">
              </div>
              <div class="col-lg-6 col-md-6">
