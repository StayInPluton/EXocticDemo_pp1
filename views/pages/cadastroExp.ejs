                  <option value="espacial">Espacial</option>
                </select>
              </div>
              <div class="col-lg-12">
                <button type="submit" class="site-btn">Cadastrar</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    <!--fim do cadastro -->

   
        <!-- Include the footer partial -->
