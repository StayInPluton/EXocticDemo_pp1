              </div>
              <div class="col-lg-6 col-md-6">
                <input type="password" placeholder="Senha" name="senha">
              </div>
              <div class="col-lg-6 col-md-6">
                <button type="submit" class="site-btn">Login</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      
        <%- include('../partials/footer') %>

